<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:id="@+id/result"
            app:layout_constraintTop_toTopOf="parent"
            android:focusableInTouchMode="false" android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/operation"
            android:textSize="18sp"
            android:phoneNumber="false"
            app:layout_constraintBaseline_toBaselineOf="@+id/button7"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="@+id/newNumber"
            android:layout_marginLeft="32dp" tools:text="+" app:layout_constraintEnd_toStartOf="@+id/button7"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/newNumber"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
    />
    <Button
            android:text="0"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
            app:layout_constraintEnd_toStartOf="@+id/buttonDot" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="1"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="@+id/button5"/>
    <Button
            android:text="3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="@+id/button6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"/>
    <Button
            android:text="4"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5" app:layout_constraintEnd_toStartOf="@+id/button5"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="5"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            app:layout_constraintEnd_toEndOf="@+id/button8"/>
    <Button
            android:text="6"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            app:layout_constraintStart_toStartOf="@+id/button9" app:layout_constraintTop_toBottomOf="@+id/button9"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="7"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            app:layout_constraintBaseline_toBaselineOf="@+id/button8"
            app:layout_constraintEnd_toStartOf="@+id/button8" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="8"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9" app:layout_constraintEnd_toStartOf="@+id/button9"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="9"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result"
            app:layout_constraintHorizontal_bias="0.499" android:layout_marginTop="16dp"/>
    <Button
            android:text="/"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide" app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9"
    />
    <Button
            android:text="Neg"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNeg"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDivide"
            app:layout_constraintStart_toEndOf="@+id/buttonDivide" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="*"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultiply" app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6"
    />
    <Button
            android:text="-"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/buttonMinus"
            app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3"
    />
    <Button
            android:text="+"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            app:layout_constraintStart_toEndOf="@+id/buttonEquals"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
    />
    <Button
            android:text="."
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDot"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
            app:layout_constraintEnd_toEndOf="@+id/button2"/>
    <Button
            android:text="="
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEquals"
            app:layout_constraintStart_toStartOf="@+id/button3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="341dp"
                                                android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>